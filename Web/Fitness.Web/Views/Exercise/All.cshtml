@model Fitness.Web.ViewModels.Exercise.AllViewModel

@{
    this.ViewData["Title"] = "All Exercise";
}

<h1>@this.ViewData["Title"]</h1>
<hr />
<br />

<div class="container">
    <div class="row">
        @foreach (var exercise in Model.Exercises)
        {
            <div class="col-md-4">
                <div class="single-cat text-center mb-30 wow fadeInUp" data-wow-duration="1s" data-wow-delay=".2s">
                    <div class="cat-cap">
                        <h3><a asp-action="Details" asp-route-id="@exercise.Id">@exercise.Name</a></h3>
                        <p>@exercise.Description.Substring(0, 100)...</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>