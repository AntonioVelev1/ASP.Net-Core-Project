@model Fitness.Web.ViewModels.Exercise.CreateInputModel

@{
    this.ViewData["Title"] = "Create Exercise";
}

<h1>@this.ViewData["Title"]</h1>
<hr />
<br />
<form method="post">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Video"></label>
        <input asp-for="Video" class="form-control" />
        <span asp-validation-for="Video" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-dark" value="Create" />
</form>