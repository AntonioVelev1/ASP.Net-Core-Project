<h1 class="bg-info text-white">All Roles</h1>
<a asp-action="Create" class="btn btn-secondary">Create a Role</a>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Name</th><th>Users</th><th>Update</th><th>Delete</th></tr>
    @foreach (var item in Model)
    {
        <tr>    
            <td>@item.Key.Id</td>
            <td>@item.Key.Name</td>
            <td>
                @foreach (var user in Model[item.Key])
                {
                    <span>@user,</span>
                }
            </td>
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@item.Key.Id">Update</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.Key.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>