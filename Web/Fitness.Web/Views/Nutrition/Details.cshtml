@model Fitness.Web.ViewModels.Nutrition.DetailsNutritionViewModel;

@{
    this.ViewData["Title"] = "Nutrition Details";
}

<h1>@this.ViewData["Title"]</h1>
<hr />
<br />
<div class="row">
    <div class="col-lg-8 posts-list">
        <div class="single-post">
            <h2 style="color: #2d2d2d;">
                @Model.Name
            </h2>
            <ul class="blog-info-link mt-3 mb-4">
                <li><i class="fa fa-user"></i>@Model.UserEmail</li>
                <li><i class="fa fa-comments"></i> 03 Comments</li>
            </ul>
            <p class="excert">@Model.Description</p>
            <p class="excert">@Model.Ingredients</p>
            <p class="excert">@Model.Calories</p>
        </div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="nav-link btn btn-link text-dark">Edit nutrition</a>
        <form method="post">
            <input type="submit" asp-action="Delete" asp-route-id="@Model.Id" class="nav-link btn btn-link text-dark" value="Delete nutrition" />
        </form>
    </div>
</div>
